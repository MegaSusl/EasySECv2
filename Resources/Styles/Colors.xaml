<?xml version="1.0" encoding="utf-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!--<Color x:Key="Primary">#512BD4</Color>-->
    <!--<Color x:Key="PrimaryDark">#ac99ea</Color>-->
    <Color x:Key="PrimaryDarkText">#242424</Color>
    <!--<Color x:Key="Secondary">#DFD8F7</Color>-->
    <Color x:Key="SecondaryDarkText">#9880e5</Color>
    <Color x:Key="Tertiary">#2B0B98</Color>

    <!--<Color x:Key="White">White</Color>-->
    <!--<Color x:Key="Black">Black</Color>-->
    <Color x:Key="Magenta">#D600AA</Color>
    <Color x:Key="MidnightBlue">#190649</Color>
    <Color x:Key="OffBlack">#1f1f1f</Color>
    
    <!-- Базовые цвета бренда -->
    <Color x:Key="Primary">#F9322C</Color>
    <Color x:Key="Secondary">#2C7EF9</Color>
    <!-- насыщенный красный -->
    <Color x:Key="PrimaryDark">#C72A24</Color>
    <!-- чуть темнее для состояний -->
    <Color x:Key="PrimaryLight">#FF5A4C</Color>
    <!-- чуть светлее для hover/pressed -->
    <Color x:Key="White">#FFFFFF</Color>
    <Color x:Key="Black">#000000</Color>
    <Color x:Key="AccentLight">#56E15F</Color>
    <Color x:Key="Accent">#23C42D</Color>
    <Color x:Key="AccentDark">#0B7F13</Color>

    <!-- Оттенки для текста и фонов -->
    <Color x:Key="Background">#FFFFFF</Color>
    <Color x:Key="BackgroundAlt">#FFF5F5</Color>
    <!-- совсем лёгкий розоватый -->
    <Color x:Key="Surface">#FFFFFF</Color>
    <Color x:Key="SurfaceAlt">#FFEDEC</Color>
    <!-- альтернативная карточная поверхность -->

    <Color x:Key="TextPrimary">#212121</Color>
    <Color x:Key="TextWhite">#FFFFFF</Color>
    <Color x:Key="TextSecondary">#5F5F5F</Color>
    <Color x:Key="TextDisabled">#A0A0A0</Color>

    <Color x:Key="Border">#E0E0E0</Color>
    <Color x:Key="Divider">#F0F0F0</Color>

    <!-- Нюансные оттенки серого -->
    <Color x:Key="Gray100">#F7F7F7</Color>
    <Color x:Key="Gray200">#EEEEEE</Color>
    <Color x:Key="Gray300">#DDDDDD</Color>
    <Color x:Key="Gray400">#CCCCCC</Color>
    <Color x:Key="Gray500">#BBBBBB</Color>
    <Color x:Key="Gray600">#999999</Color>
    <Color x:Key="Gray700">#777777</Color>
    <Color x:Key="Gray800">#555555</Color>
    <Color x:Key="Gray900">#333333</Color>
    <Color x:Key="Gray950">#141414</Color>
    <!-- Brushes -->
    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource Primary}" />
    <SolidColorBrush x:Key="PrimaryDarkBrush" Color="{StaticResource PrimaryDark}" />
    <SolidColorBrush x:Key="PrimaryLightBrush" Color="{StaticResource PrimaryLight}" />
    <SolidColorBrush x:Key="WhiteBrush" Color="{StaticResource White}" />
    <SolidColorBrush x:Key="BlackBrush" Color="{StaticResource Black}" />

    <SolidColorBrush x:Key="BackgroundBrush"   Color="{StaticResource Background}" />
    <SolidColorBrush x:Key="BackgroundAltBrush" Color="{StaticResource BackgroundAlt}" />
    <SolidColorBrush x:Key="SurfaceBrush"      Color="{StaticResource Surface}" />
    <SolidColorBrush x:Key="SurfaceAltBrush"   Color="{StaticResource SurfaceAlt}" />

    <SolidColorBrush x:Key="TextPrimaryBrush"   Color="{StaticResource TextPrimary}" />
    <SolidColorBrush x:Key="TextSecondaryBrush" Color="{StaticResource TextSecondary}" />
    <SolidColorBrush x:Key="TextDisabledBrush"  Color="{StaticResource TextDisabled}" />

    <SolidColorBrush x:Key="BorderBrush"   Color="{StaticResource Border}" />
    <SolidColorBrush x:Key="DividerBrush"  Color="{StaticResource Divider}" />

    <SolidColorBrush x:Key="Gray100Brush" Color="{StaticResource Gray100}" />
    <SolidColorBrush x:Key="Gray200Brush" Color="{StaticResource Gray200}" />
    <SolidColorBrush x:Key="Gray300Brush" Color="{StaticResource Gray300}" />
    <SolidColorBrush x:Key="Gray400Brush" Color="{StaticResource Gray400}" />
    <SolidColorBrush x:Key="Gray500Brush" Color="{StaticResource Gray500}" />
    <SolidColorBrush x:Key="Gray600Brush" Color="{StaticResource Gray600}" />
    <SolidColorBrush x:Key="Gray700Brush" Color="{StaticResource Gray700}" />
    <SolidColorBrush x:Key="Gray800Brush" Color="{StaticResource Gray800}" />
    <SolidColorBrush x:Key="Gray900Brush" Color="{StaticResource Gray900}" />
    <SolidColorBrush x:Key="Gray950Brush" Color="{StaticResource Gray950}"/>
</ResourceDictionary>
